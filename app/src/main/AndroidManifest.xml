<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobithink.carbon">

    <application
        android:name="com.mobithink.carbon.CarbonApplication"
        android:allowBackup="true"
        android:icon="@drawable/mobithink_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.mobithink.carbon.preparation.ChoiceLineFromAnalyzeActivity"></activity>
        <activity android:name="com.mobithink.carbon.preparation.CreateLineActivity"></activity>
        <activity android:name="com.mobithink.carbon.preparation.ParametersActivity"></activity>
        <activity android:name="com.mobithink.carbon.preparation.ChoiceLineFromConsultActivity"></activity>
        <activity android:name="com.mobithink.carbon.driving.DrivingActivity"></activity>
        <activity android:name="com.mobithink.carbon.station.StationActivity"></activity>
        <activity android:name="com.mobithink.carbon.consultation.ConsultationActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>