<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/station_event_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_circle_design"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/station_event_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/regular_margin"
        android:lines="1"
        android:textColor="@color/white"/>

    <Chronometer
        android:id="@+id/station_event_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/double_regular_margin"
        android:layout_toStartOf="@+id/micro_button"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/micro_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/regular_margin"
        android:layout_toStartOf="@+id/photo_button"
        android:background="@mipmap/ic_white_micro"/>

    <Button
        android:id="@+id/photo_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/regular_margin"
        android:layout_toStartOf="@+id/station_event_stop_button"
        android:background="@mipmap/ic_white_photo"/>

    <Button
        android:id="@+id/station_event_stop_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/ic_white_stop"/>

</RelativeLayout>