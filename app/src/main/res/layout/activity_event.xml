<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/event_map_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/cancelled_timecode_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/ic_white_cross"/>

    <Button
        android:id="@+id/voice_memo_button"
        android:layout_width="@dimen/regular_size_rounded_button"
        android:layout_height="@dimen/regular_size_rounded_button"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/event_photo_button"
        android:layout_marginBottom="@dimen/regular_margin"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/ic_yellowgrey_micro"/>

    <Button
        android:id="@+id/event_photo_button"
        android:layout_width="@dimen/regular_size_rounded_button"
        android:layout_height="@dimen/regular_size_rounded_button"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/confirm_position_event_button"
        android:layout_marginTop="@dimen/regular_margin"
        android:layout_marginBottom="@dimen/regular_margin"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/ic_light_blue_photo"/>

    <Button
        android:id="@+id/confirm_position_event_button"
        android:layout_width="@dimen/regular_size_rounded_button"
        android:layout_height="@dimen/regular_size_rounded_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/regular_margin"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@mipmap/ic_stop"/>

</RelativeLayout>