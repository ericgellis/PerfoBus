<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobithink.carbon.consultation.fragments.EventTab3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="@dimen/regular_size_rounded_button"
            android:layout_height="@dimen/regular_size_rounded_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:layout_marginEnd="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/weatherTemperatureTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weatherImageView"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/atmoNumberTextView"
            android:layout_width="@dimen/regular_size_rounded_button"
            android:layout_height="@dimen/regular_size_rounded_button"
            android:layout_toEndOf="@+id/weatherImageView"
            android:layout_toRightOf="@+id/weatherImageView"
            android:layout_alignBottom="@+id/weatherImageView"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginLeft="@dimen/double_regular_margin"
            android:background="@drawable/texview_circle_design"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/atmoTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/atmoNumberTextView"
            android:layout_alignBottom="@+id/weatherTemperatureTextView"
            android:layout_toEndOf="@+id/weatherImageView"
            android:layout_toRightOf="@+id/weatherImageView"
            android:layout_marginTop="@dimen/double_regular_margin"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginLeft="@dimen/double_regular_margin"
            android:text="@string/atmo"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/cityNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/regular_margin"/>

        <TextView
            android:id="@+id/lineNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cityNameTextView"
            android:layout_marginTop="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"/>

        <TextView
            android:id="@+id/directionNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lineNameTextView"
            android:layout_marginTop="@dimen/regular_margin"/>

        <TextView
            android:id="@+id/enteringDataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enteringData"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_alignBottom="@+id/cityNameTextView"/>

        <TextView
            android:id="@+id/enteredTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:layout_below="@+id/enteringDataTextView"
            android:layout_marginTop="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/enteredDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/enteredTimeTextView"
            android:layout_marginTop="@dimen/regular_margin"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/courseTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weatherTemperatureTextView"
            android:layout_marginTop="30dp"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginLeft="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/double_regular_margin"
            android:layout_marginEnd="@dimen/double_regular_margin"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:text="@string/course"/>

        <TextView
            android:id="@+id/courseDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/courseTextView"
            android:layout_toRightOf="@+id/courseTextView"
            android:layout_alignBottom="@+id/courseTextView"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:layout_marginEnd="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/lossTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTextView"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginLeft="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/double_regular_margin"
            android:text="@string/includingLoss"/>

        <TextView
            android:id="@+id/lossDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lossTextView"
            android:layout_toEndOf="@+id/lossTextView"
            android:layout_toRightOf="@+id/lossTextView"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:layout_marginEnd="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/sectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lossTextView"
            android:layout_marginTop="@dimen/double_regular_margin"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginLeft="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/double_regular_margin"
            android:text="@string/averageSection"/>

        <TextView
            android:id="@+id/sectionDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/sectionTextView"
            android:layout_toRightOf="@+id/sectionTextView"
            android:layout_alignBottom="@+id/sectionTextView"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:layout_marginEnd="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/lossTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sectionTextView"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginLeft="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/double_regular_margin"
            android:text="@string/includingLoss"/>

        <TextView
            android:id="@+id/lossSectionDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lossTextView2"
            android:layout_toEndOf="@+id/lossTextView2"
            android:layout_toRightOf="@+id/lossTextView2"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:layout_marginEnd="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/detourRouteMapsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/courseTextView"
            android:layout_marginEnd="@dimen/double_regular_margin"
            android:layout_marginRight="@dimen/double_regular_margin"
            android:text="@string/detourRouteMaps"/>

        <TextView
            android:id="@+id/detourDistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detourRouteMapsTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_alignBottom="@+id/lossTextView"/>

        <Button
            android:id="@+id/pdfButton"
            android:layout_width="@dimen/regular_size_rounded_button"
            android:layout_height="@dimen/regular_size_rounded_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@mipmap/ic_blue_pdf"/>
    </RelativeLayout>
</ScrollView>
