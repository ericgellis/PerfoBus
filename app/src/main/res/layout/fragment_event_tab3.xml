<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.mobithink.carbon.consultation.fragments.EventTab3">

    <TextView
        android:id="@+id/totalTrip"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:background="@color/lightBlue"
        android:text="@string/total_trip"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/eventInActualSection"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/totalTrip"
        android:background="@color/white"
        android:text="@string/event_in_actual_section"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/eventInCrossroads"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/eventInActualSection"
        android:background="@color/white"
        android:text="@string/event_crossroad"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/eventInStations"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/eventInCrossroads"
        android:background="@color/white"
        android:text="@string/event_in_station"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="150dp">
        <RelativeLayout
            android:id="@+id/mainRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/totalTripTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_marginBottom="@dimen/regular_margin"
                android:layout_marginTop="@dimen/double_regular_margin"
                android:text="@string/total_trip_time"/>

            <TextView
                android:id="@+id/totalTripTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/totalTripTime"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_alignBaseline="@+id/totalTripTime"/>

            <TextView
                android:id="@+id/averageSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalTripTime"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_marginBottom="@dimen/regular_margin"
                android:text="@string/average_speed"/>

            <TextView
                android:id="@+id/averageSpeedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/averageSpeed"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_alignBaseline="@+id/averageSpeed"/>

            <TextView
                android:id="@+id/decomposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/averageSpeed"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_marginBottom="@dimen/regular_margin"
                android:text="@string/decomposition"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/decompositionPieChart"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_toEndOf="@+id/decomposition"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="@dimen/regular_margin"></com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:id="@+id/lossOfTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/decompositionPieChart"
                android:layout_marginBottom="@dimen/regular_margin"
                android:text="@string/loss_total_time"/>

            <TextView
                android:id="@+id/lossOfTotalTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/lossOfTotalTime"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_alignBaseline="@+id/lossOfTotalTime"/>

            <TextView
                android:id="@+id/savingOfPossibleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lossOfTotalTime"
                android:layout_marginBottom="@dimen/regular_margin"
                android:text="@string/saving_possible_time"/>

            <TextView
                android:id="@+id/savingOfPossibleTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/savingOfPossibleTime"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_alignBaseline="@+id/savingOfPossibleTime"/>

            <TextView
                android:id="@+id/savingInEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/savingOfPossibleTime"
                android:layout_marginBottom="@dimen/regular_margin"
                android:text="@string/saving_in_euro"/>

            <TextView
                android:id="@+id/savingInEuroTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/savingInEuro"
                android:layout_marginStart="@dimen/regular_margin"
                android:layout_alignBaseline="@+id/savingInEuro"/>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/detailedRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/double_regular_margin" />

        <TextView
            android:id="@+id/eventTimeSaving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventName"
            android:layout_marginStart="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/eventExplanations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventTimeSaving"
            android:layout_marginStart="@dimen/double_regular_margin"/>

        <ImageView
            android:id="@+id/eventImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/eventExplanations"
            android:layout_marginStart="@dimen/double_regular_margin" />

        <ImageView
            android:id="@+id/eventAudioView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/eventImageView"
            android:layout_alignBottom="@+id/eventImageView"
            android:background="@mipmap/ic_white_audio"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
