<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginTop="@dimen/double_regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/eventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventNameTextView"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"
            android:text="@string/type_event"/>

        <TextView
            android:id="@+id/eventTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/eventType"
            android:layout_alignBaseline="@+id/eventType"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventTypeTextView"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"
            android:text="@string/time"/>

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/time"
            android:layout_alignBaseline="@+id/time"
            android:layout_marginStart="@dimen/regular_margin" />

        <ImageView
            android:id="@+id/eventPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/time"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"
            android:src="@mipmap/ic_blue_wrong_circle"/>*

        <com.google.android.gms.maps.MapView
            android:id="@+id/eventMap"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@+id/eventPhoto"
            android:layout_alignBottom="@+id/eventPhoto"
            android:layout_marginStart="@dimen/double_regular_margin"/>

        <TextView
            android:id="@+id/audioRetranscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventPhoto"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin"
            android:text="@string/retranscription_voice_memo"/>

        <TextView
            android:id="@+id/audioRetranscriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/audioRetranscription"
            android:layout_toEndOf="@+id/audioRetranscription"
            android:layout_marginStart="@dimen/regular_margin"
            android:layout_marginBottom="@dimen/regular_margin" />

        <TextView
            android:id="@+id/eventExplanations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/audioRetranscriptionTextView"
            android:layout_marginStart="@dimen/regular_margin"/>





    </RelativeLayout>
</ScrollView>