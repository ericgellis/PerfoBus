<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobithink.carbon.SplashScreenActivity">

    <ImageView
        android:id="@+id/parameterButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/double_regular_margin"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="@dimen/regular_margin"
        android:src="@mipmap/ic_parameters"/>

    <ImageView
        android:id="@+id/mobithinkLogo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/parameterButton"
        android:layout_marginTop="@dimen/regular_margin"
        android:layout_marginBottom="@dimen/double_regular_margin"
        android:src="@drawable/mobithink_logo" />

    <TextView
        android:id="@+id/fixed_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mobithinkLogo"
        android:layout_marginTop="@dimen/regular_margin"
        android:layout_marginBottom="@dimen/regular_margin"
        android:text= "@string/fixed_text"
        android:textColor="@color/grey"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/analyzeButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above ="@+id/consultButton"
        android:text="@string/analyze"
        android:textColor="@color/mobiThinkBlue"
        android:background="@color/veryLightGrey"/>

    <Button
        android:id="@+id/consultButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mobiThinkBlue"
        android:text="@string/consult"
        android:textColor="@color/veryLightGrey"/>

</RelativeLayout>
